<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_start_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start" />

    <Button
        android:id="@+id/btn_clear_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Clear" />

    <com.cdev.achievementview.AchievementView
        android:id="@+id/achievement_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        custom:collapseStartDelay="3000"
        custom:rightPartWidth="200dp"
        custom:textSizeFirstLine="10sp"
        custom:textSizeSecondLine="8sp" />

    <com.cdev.achievementview.AchievementView
        android:id="@+id/achievement_view_green"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        custom:collapseStartDelay="3000"
        custom:colorLeft="@color/green_light"
        custom:colorRight="@color/green_dark"
        custom:drawableLeft="@drawable/xbox"
        custom:rightPartWidth="250dp"
        custom:textSizeFirstLine="10sp"
        custom:textSizeSecondLine="8sp" />

</RelativeLayout>